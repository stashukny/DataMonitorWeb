@model IEnumerable<DataMonitorWeb.Models.Watcher>

@{
    ViewBag.Title = "Index";
}

@section AddToHead{
    <script type="text/javascript" language="javascript" src="/Scripts/jquery-3.1.0.js"></script>
    <script type="text/javascript" language="javascript" src="//cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js"></script>
    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css">

<script type="text/javascript" language="javascript" class="init">
        $(document).ready(function () {
            $('#watchers').dataTable(
                {
                    "columnDefs": [{
                        "targets": 8,
                        "orderable": false
                    },
                    {
                        "targets": 9,
                        "orderable": false
                    },
                    {
                        "targets": 10,
                        "orderable": false
                    }],
                    "order": [[0, "asc"]]
                });
        });
</script>

}




<h2>Watchers</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-bordered" id="watchers">
    <thead>
        <tr>     
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastValue)
            </th>
            <th>
                Client
            </th>
            <th>
                Level
            </th>
            <th>
                Source
            </th>
            <th>
                Metric
            </th>
            <th>
                Threashold
            </th>
            <th>
                Notification
            </th>
            <th></th>
            <th></th>
            <th></th>   
        </tr>
        </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastValue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Client.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Level.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Source.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Metric.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Threashold.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notification.Name)
                </td>
                <td>@Html.ActionLink("Edit", "Edit", new { id = item.Id })</td>
                <td>@Html.ActionLink("Details", "Details", new { id = item.Id })</td>
                <td>@Html.ActionLink("Delete", "Delete", new { id = item.Id })</td>
            </tr>
        }
    </tbody>
</table>
